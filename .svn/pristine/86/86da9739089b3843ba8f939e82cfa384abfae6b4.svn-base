import {addImage,queryImages} from '@/services/UploadImage';
import { notification } from 'antd';

export default {
  namespace: 'image',
  state: {
    list: {},
    loading: false,
    mainPictureimg:[]
  },

  effects: {
    *add({ payload }, { call, put }) {
      const response = yield call(addImage, payload);
      if (response.code === 'SUCCESS') {
        const newFetch = yield call(queryImages, {
          pageNo: 1,
          pageSize: 10
        });
        yield put({
          type: 'saveImage',
          payload: newFetch.data,
        });
        notification.success({
          message: response.code,
          description: response.msg,
        });
      } else {
        notification.error({
          message: response.code,
          description: response.msg,
        });
      }
      return response;
    },

    *fetchImage({ payload }, { call, put }) {
      const response = yield call(queryImages, payload);
      yield put({
        type: 'saveImage',
        payload: response.data,
      });
    },

    *mainPicture({ payload, callback }, { put }) {
      yield put({
        type: 'saveMainPicture',
        payload,
      });
      if (callback) callback();
    }
  },
  reducers: {
    loading(state) {
      return {
        ...state,
        loading: true
      };
    },
    saveImage(state, action) {
      return {
        ...state,
        list: action.payload,
      };
    },
    saveMainPicture(state, action) {
      return {
        ...state,
        mainPictureimg: action.payload,
      };
    },
  }
};